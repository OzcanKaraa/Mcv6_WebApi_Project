@model IEnumerable<Employee>
<a class="btn btn-success">
    <i class="bi bi-plus-circle"></i> Transfer from Excel
</a>
<a class="btn btn-success">
    <i class="bi bi-plus-circle"></i> Transfer to PDF
</a>
<br />
<br />
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>City</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FName</td>
                <td>@item.LName</td>
                <td>@item.City</td>
                <td>
                    <a class="btn btn-outline-primary" asp-controller="Employee" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                    <a class="btn btn-outline-info" asp-controller="Employee" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a> |
                    <a class="btn btn-danger text-white" asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Employee" asp-action="Create" class="btn btn-success">
    <i class="bi bi-plus-circle"></i> Ekle
</a>